@model Sigeret.Solicitud

@{
    ViewBag.Title = "Solicitud";
}

<h2>Nueva Solicitud</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Solicitud</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.HoraInicio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HoraInicio)
            @Html.ValidationMessageFor(model => model.HoraInicio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HoraFin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HoraFin)
            @Html.ValidationMessageFor(model => model.HoraFin)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdUserProfile)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IdUserProfile)
            @Html.ValidationMessageFor(model => model.IdUserProfile)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdLugar)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IdLugar)
            @Html.ValidationMessageFor(model => model.IdLugar)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retroceder", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
