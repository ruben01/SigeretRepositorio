@model Sigeret.Models.AulaEdificio

@{
    ViewBag.Title = "Editar Aula";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Editar Aula</h2>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset class="employe">
                    <legend>Datos de la Aula a actualizar</legend>
                    @Html.HiddenFor(model => model.Id)

                    <div class="row">
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.Aula)
                            @Html.CTextBoxFor(model => model.Aula)
                            @Html.CValidationMessageFor(model => model.Aula)
                        </div>

                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.IdLugar)
                            @Html.CDropDownListFor(model => model.IdLugar, null, null, new { @class = "chosen" })
                            @Html.CValidationMessageFor(model => model.IdLugar)
                        </div>
                    </div>

                    <div class="row form-group col-lg-12">
                        <input type="submit" class="btn btn-primary" value="Guardar" />
                        @Html.ActionLink("Regresar", "Aulas", null, new { @class = "btn btn-default" })
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
