@model IEnumerable<AulaEdificio>

@{
    ViewBag.Title = "Aulas (Pagina Principal)";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Reporte Aulas</h2>
        </hgroup>
        <div class="well">
            <fieldset>
                <legend>Aulas registradas en la aplicación</legend>
                <div class="form-group col-lg-12">
                    <p class="">
                        @Html.ActionLink("Nueva Aula", "NuevaAula", null, new { @class = "btn btn-primary  fr mb10" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12 pl0">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Aula)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Lugar.Edificio)
                                </th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Aula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lugar.Edificio)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "EditarAula", new { id = item.Id }) |
                                        @Html.ActionLink("Eliminar", "EliminarAula", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>
