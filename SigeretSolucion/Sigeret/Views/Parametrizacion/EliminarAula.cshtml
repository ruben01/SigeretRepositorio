@model Sigeret.Models.AulaEdificio

@{
    ViewBag.Title = "Eliminar Aula";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Eliminar Aula</h2>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset class="employe">
                    <legend>¿Está seguro que desea eliminar esta Edifiico?</legend>

                    <div class="row">
                        <div class="form-group col-lg-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@Html.LabelFor(model => model.Aula)</h3>
                                </div>
                                <div class="panel-body">
                                    @Html.DisplayFor(model => model.Aula)
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@Html.LabelFor(model => model.Lugar.Edificio)</h3>
                                </div>
                                <div class="panel-body">
                                    @Html.DisplayFor(model => model.Lugar.Edificio)
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row form-group col-lg-12">
                        <input type="submit" class="btn btn-danger" value="Eliminar" />
                        @Html.ActionLink("Regresar", "Edificios", null, new { @class = "btn btn-default" })
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
