@model IEnumerable<Sigeret.Models.Contacto>

@{
    ViewBag.Title = "Mis Contactos";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Mis Contactos</h2>
        </hgroup>
        <div class="well">
            <fieldset>
                <legend>Agenda de contactos</legend>
                <div class="form-group col-lg-12">
                    <p class="">
                        @Html.ActionLink("Nuevo", "NuevoContacto", null, new { @class = "btn btn-primary  fr mb10" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12 pl0">
                    <table class="table tblContacts table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayName("Contacto")
                            </th>

                            <th>
                                @Html.DisplayName("Tipo")
                            </th>
                            <th>Opciones</th>
                        </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoContacto.Descripcion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "editContact", data_url = Url.Action("EditarContacto", new { id = item.Id }) }) |
                                        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>

            <div class="modalForm">
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.tblContacts').on('click', '.editContact', function (evt) {
                evt.preventDefault();
                var me = $(this);
                $('.modalForm').html('');
                $.get(
                    me.data('url'),
                    function (data) {
                        $('.modalForm').html(data);
                        $('#editarContactoModal').modal(); fnValidateDynamicContent($('.editContactFrm'));
                    }
                );
            });
        });
    </script>
}