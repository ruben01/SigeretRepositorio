@model IEnumerable<Sigeret.Models.Contacto>

@{
    ViewBag.Title = "Mis Contactos";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Mis Contactos</h2>
        </hgroup>
        <div class="well">
            <fieldset>
                <legend>Agenda de contactos</legend>
                <div class="form-group col-lg-12">
                    <p class="">
                        @Html.ActionLink("Nuevo", "NuevoContacto", null, new { @class = "btn btn-primary  fr mb10" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12 pl0">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayName("Contacto")
                            </th>

                            <th>
                                @Html.DisplayName("Tipo")
                            </th>
                            <th>Opciones</th>
                        </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoContacto.Descripcion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                                        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>
