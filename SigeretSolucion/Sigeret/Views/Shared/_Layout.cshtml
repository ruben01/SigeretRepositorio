<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title Sigeret (UASD)</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/bootstrapmodal")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/DataTables-1.9.4/media/css/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Agregando código personal del NavBar Saúl H. S. -->
    @Html.Partial("_NavBar")
    <div id="holder" class="container">
        @RenderSection("featured", required: false)
        @if (TempData["MessageToDeliver"] != null)
        { 
            <div class="modal dn fade" id="SpMessage" data-width="400">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">×</a>
                    <p class="center">SIGERET</p>
                </div>
                <div class="modal-body">
                    <p>@(TempData["MessageToDeliver"])</p>
                </div>
            </div>
        }
        @Html.Hidden("MessageToDeliver", TempData["MessageToDeliver"], new { id = "MessageToDeliver" })
        @RenderBody()
    </div>
    <div id="footer" class="">
        <footer>
            <div id="footer-content" class="content-wrapper">
                <div class="float-left">
                    @Html.ActionLink("SIGERET", "Index", "Home", null, new { @class = "navbar-brand pl0" })
                    <p class="fr foot">&copy; @DateTime.Now.Year - SIGERET, UASD</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/chosen")
    @Scripts.Render("~/bundles/maskedinput")
    @Scripts.Render("~/bundles/timepicker")
    @Scripts.Render("~/bundles/global")
</body>
</html>
